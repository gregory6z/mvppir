{
  "name": "mvppir-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo: Server API + Admin Dashboard + Mobile App",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:server": "turbo run dev --filter=@mvppir/server",
    "dev:web": "turbo run dev --filter=@mvppir/web",
    "dev:mobile": "turbo run dev --filter=@mvppir/mobile",
    "mobile:ios": "pnpm --filter @mvppir/mobile ios",
    "mobile:android": "pnpm --filter @mvppir/mobile android"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
