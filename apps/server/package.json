{
  "name": "@mvppir/server",
  "version": "1.0.0",
  "private": true,
  "description": "API Fastify com Prisma e PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src",
    "start": "node dist/server.js",
    "test": "NODE_ENV=test node --import tsx --test src/tests/integration/**/*.test.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "seed:preview": "tsx seed-batch-collect-preview.ts",
    "seed:matic": "tsx seed-matic-balance.ts",
    "seed:history": "tsx seed-batch-collect-history.ts",
    "seed:withdrawals": "tsx seed-withdrawals.ts",
    "seed:all": "npm run seed:preview && npm run seed:matic && npm run seed:history && npm run seed:withdrawals",
    "clean:mocks": "tsx clean-all-mocks.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.14.0",
    "@bull-board/fastify": "^6.14.0",
    "@fastify/cors": "^11.1.0",
    "@moralisweb3/common-evm-utils": "^2.27.2",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.28",
    "bullmq": "^5.61.2",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.8.2",
    "moralis": "^2.27.2",
    "qrcode": "^1.5.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^22.9.0",
    "@types/qrcode": "^1.5.5",
    "pino-pretty": "^11.2.2",
    "prisma": "^5.22.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
