# Docker Compose Environment Variables
# Copy this file to .env and fill in your secrets

# Node Environment
NODE_ENV=production
PORT=4000
BACKEND_PORT=4000

# Database
POSTGRES_USER=mvppir
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=mvppir
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Auth & Security (min 32 chars)
AUTH_SECRET=your-auth-secret-min-32-chars-here
ENCRYPTION_KEY=your-64-char-hex-encryption-key-here

# Moralis Blockchain
MORALIS_API_KEY=your-moralis-api-key
MORALIS_STREAM_SECRET=your-moralis-stream-secret

# Polygon Network
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# Global Wallet
GLOBAL_WALLET_ADDRESS=0x...
GLOBAL_WALLET_PRIVATE_KEY=your-encrypted-or-plain-wallet-private-key

# Frontend URL
FRONTEND_URL=https://mvppir.vercel.app
